generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @unique
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String   @unique
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  incidents     Incident[]
  isAdmin       Boolean    @default(false)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Incident {
  id        Int      @id @default(autoincrement())
  event     String   @db.Text()
  createdAt DateTime @default(now())
  yearsAgo  Int
  country   String
  user      User?    @relation(fields: [authorId], references: [id])
  authorId  String?

  @@index([authorId])
}

// Profile Schema
model Profile {
  id          Int     @id @default(autoincrement())
  name        String
  username    String
  title       String
  description String?
  about       String?
  teamHistory Json?
  social      Json?
  image       String
  coverPhoto  String?
  profileLink String?
  core        Team    @relation("core", fields: [coreId], references: [id])
  coreId      Int
  member      Team    @relation("member", fields: [memberId], references: [id])
  memberId    Int
  lead        Team    @relation("lead", fields: [leadId], references: [id])
  leadId      Int     @unique
  Blog        Blog[]
}

// Teams Schema
model Team {
  id      Int       @id @default(autoincrement())
  name    String
  lead    Profile?  @relation("lead")
  core    Profile[] @relation("core")
  members Profile[] @relation("member")
}

// Events Schema
model Event {
  id               String     @id @default(cuid())
  coverPhoto       String?
  title            String
  description      String
  schedule         Json
  speakers         Speaker[]
  date             Json
  venue            String
  status           String
  registrationLink String
  tags             EventTag[]
}

model Speaker {
  id          Int     @id @default(autoincrement())
  name        String
  image       String?
  title       String?
  description String?
  profileLink String
  events      Event   @relation(fields: [speakerId], references: [id], onDelete: Cascade)
  speakerId   String
}

// Blog Schema
model Blog {
  id          String    @id @default(cuid())
  title       String
  date        DateTime  @default(now())
  author      Profile   @relation(references: [id], fields: [authorId])
  authorId    Int
  bannerImage String?
  article     String
  slug        String
  tags        BlogTag[]
}

model BlogTag {
  label   String
  slug    String
  tagId   Int    @unique @default(autoincrement())
  blogTag Blog?  @relation(fields: [blogId], references: [id], onDelete: Cascade)
  blogId  String
}

model EventTag {
  label    String
  slug     String
  tagId    Int     @unique @default(autoincrement())
  eventTag Event?  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId  String?
}
