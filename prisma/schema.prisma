generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  //relationMode = "prisma"
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @unique
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String   @unique
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  incidents     Incident[]
  isAdmin       Boolean    @default(false)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Incident {
  id        Int      @id @default(autoincrement())
  event     String   @db.Text()
  createdAt DateTime @default(now())
  yearsAgo  Int
  country   String
  user      User?    @relation(fields: [authorId], references: [id])
  authorId  String?

  @@index([authorId])
}

// Individual Event Schema
model IndividualEvent {
  id               Int      @id @default(autoincrement())
  title            String
  image            String
  date             DateTime
  shortDescription String
  description      String
  isUpcoming       Boolean  @default(true)
}

// Profile Schema
model Profile {
  id          Int           @id @default(autoincrement())
  name        String
  title       String
  description String?
  about       String?
  teamHistory TeamHistory[]
  social      Social[]
  profileLink String?
  core        Teams         @relation("coreMembers", fields: [coreId], references: [id])
  coreId      String
  member      Teams         @relation("members", fields: [memberId], references: [id])
  memberId    String
  lead        Teams         @relation("lead", fields: [leadId], references: [id])
  leadId      String        @unique
}

model TeamHistory {
  id            Int     @id @default(autoincrement())
  team          String?
  role          String?
  profile       Profile @relation(fields: [teamHistoryId], references: [id], onDelete: Cascade)
  teamHistoryId Int
}

model Social {
  id       Int     @id @default(autoincrement())
  name     String?
  url      String?
  profile  Profile @relation(fields: [socialId], references: [id], onDelete: Cascade)
  socialId Int
}

// Teams Schema
model Teams {
  id      String    @id
  name    String
  lead    Profile?  @relation("lead")
  core    Profile[] @relation("coreMembers")
  members Profile[] @relation("members")
  userId  String
}

// Events Schema
model Events {
  eventId          Int        @id @default(autoincrement())
  bannerImage      String
  title            String
  description      String
  schedule         Schedule[]
  speakers         Speakers[]
  date             String
  venue            String
  registrations    String
  registrationLink String
}

model Schedule {
  id          Int    @id @default(autoincrement())
  time        Time?
  sessionName String
  sessionDate String
  events      Events @relation(fields: [scheduleId], references: [eventId], onDelete: Cascade)
  scheduleId  Int    @unique
}

model Time {
  start    DateTime
  end      DateTime
  schedule Schedule @relation(fields: [timeId], references: [scheduleId], onDelete: Cascade)
  timeId   Int      @unique
}

model Speakers {
  id          Int     @id @default(autoincrement())
  name        String
  title       String?
  description String?
  profileLink String
  events      Events  @relation(fields: [speakerId], references: [eventId], onDelete: Cascade)
  speakerId   Int
}

// Blog Schema
model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  date        DateTime @default(now())
  author      String
  bannerImage String
  article     String
  tags        Tags[]
}

model Tags {
  tag   String
  blog  Blog   @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId Int    @unique
}
